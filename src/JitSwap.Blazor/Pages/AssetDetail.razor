@page "/assets/{asset}"
@using JitSwap.Blazor.ViewModels;
@inherits MvvmComponentBase<MainViewModel>

<PageTitle>Assets</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolDetails Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolStats Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolDepthHistory_DepthChart Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolDepthHistory_AssetPriceChart Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolSwapHistory_SwapsCountChart Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolSwapHistory_SwapsVolumeChart Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolSwapHistory_SwapsFeesChart Asset="@Asset" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4">
                <PoolSwapHistory_SwapsTotalsChart Asset="@Asset" />
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>