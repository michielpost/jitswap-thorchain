@inherits MvvmComponentBase<MainViewModel>

<MudText Typo="Typo.h5">Global Stats</MudText>
<DataLoaderProgress DataLoader="BindingContext.StatsDataVM.DataLoader" />
@if (BindingContext.StatsDataVM.DataLoader.LoadingState != LoadingState.Finished) return;


<MudText>Rune Depth: @BindingContext.StatsDataVM.Data?.RuneDepth</MudText>
<MudText>Switched Rune: @BindingContext.StatsDataVM.Data?.SwitchedRune</MudText>
<MudText>Rune Price USD: @BindingContext.StatsDataVM.Data?.RunePriceUSD</MudText>

<MudText>Swap Volume: @BindingContext.StatsDataVM.Data?.SwapVolume</MudText>
<MudText>Swap Count 24h: @BindingContext.StatsDataVM.Data?.SwapCount24h</MudText>
<MudText>Swap Count 30d: @BindingContext.StatsDataVM.Data?.SwapCount30d</MudText>
<MudText>Swap Count: @BindingContext.StatsDataVM.Data?.SwapCount</MudText>

<MudText>Unique Swapper Count: @BindingContext.StatsDataVM.Data?.UniqueSwapperCount</MudText>

<br />
<MudText>To Asset Count: @BindingContext.StatsDataVM.Data?.ToAssetCount</MudText>
<MudText>To Rune Count: @BindingContext.StatsDataVM.Data?.ToRuneCount</MudText>

<br />
<MudText>Synth Mint Count: @BindingContext.StatsDataVM.Data?.SynthMintCount</MudText>
<MudText>Synth Burn Count: @BindingContext.StatsDataVM.Data?.SynthBurnCount</MudText>

<br />
<MudText>Daily Active Users: @BindingContext.StatsDataVM.Data?.DailyActiveUsers</MudText>
<MudText>Monthly Active Users: @BindingContext.StatsDataVM.Data?.MonthlyActiveUsers</MudText>

<br />
<MudText>Add Liquidity Count: @BindingContext.StatsDataVM.Data?.AddLiquidityCount</MudText>
<MudText>Add Liquidity Volume: @BindingContext.StatsDataVM.Data?.AddLiquidityVolume</MudText>

<br />
<MudText>Withdraw Volume: @BindingContext.StatsDataVM.Data?.WithdrawVolume</MudText>
<MudText>Withdraw Count: @BindingContext.StatsDataVM.Data?.WithdrawCount</MudText>

<br />
<MudText>Impermanent Loss Protection Paid: @BindingContext.StatsDataVM.Data?.ImpermanentLossProtectionPaid</MudText>


@code {
    protected override void OnInitialized()
    {
        WatchDataLoaderVM(BindingContext.StatsDataVM);

        base.OnInitialized();
    }
}
