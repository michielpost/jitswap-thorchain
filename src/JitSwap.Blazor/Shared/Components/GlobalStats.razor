@inherits MvvmComponentBase<MainViewModel>

<MudText Typo="Typo.h5">Global Stats</MudText>
<DataLoaderProgress DataLoader="BindingContext.StatsDataDataLoader" />
@if (BindingContext.StatsDataDataLoader.LoadingState != LoadingState.Finished) return;


<MudText>Rune Depth: @BindingContext.StatsData?.RuneDepth</MudText>
<MudText>Switched Rune: @BindingContext.StatsData?.SwitchedRune</MudText>
<MudText>Rune Price USD: @BindingContext.StatsData?.RunePriceUSD</MudText>

<MudText>Swap Volume: @BindingContext.StatsData?.SwapVolume</MudText>
<MudText>Swap Count 24h: @BindingContext.StatsData?.SwapCount24h</MudText>
<MudText>Swap Count 30d: @BindingContext.StatsData?.SwapCount30d</MudText>
<MudText>Swap Count: @BindingContext.StatsData?.SwapCount</MudText>

<MudText>Unique Swapper Count: @BindingContext.StatsData?.UniqueSwapperCount</MudText>

<br />
<MudText>To Asset Count: @BindingContext.StatsData?.ToAssetCount</MudText>
<MudText>To Rune Count: @BindingContext.StatsData?.ToRuneCount</MudText>

<br />
<MudText>Synth Mint Count: @BindingContext.StatsData?.SynthMintCount</MudText>
<MudText>Synth Burn Count: @BindingContext.StatsData?.SynthBurnCount</MudText>

<br />
<MudText>Daily Active Users: @BindingContext.StatsData?.DailyActiveUsers</MudText>
<MudText>Monthly Active Users: @BindingContext.StatsData?.MonthlyActiveUsers</MudText>

<br />
<MudText>Add Liquidity Count: @BindingContext.StatsData?.AddLiquidityCount</MudText>
<MudText>Add Liquidity Volume: @BindingContext.StatsData?.AddLiquidityVolume</MudText>

<br />
<MudText>Withdraw Volume: @BindingContext.StatsData?.WithdrawVolume</MudText>
<MudText>Withdraw Count: @BindingContext.StatsData?.WithdrawCount</MudText>

<br />
<MudText>Impermanent Loss Protection Paid: @BindingContext.StatsData?.ImpermanentLossProtectionPaid</MudText>





@code {
   
    protected override async Task LoadDataAsync()
    {
        await BindingContext.LoadStats();
    }

}
