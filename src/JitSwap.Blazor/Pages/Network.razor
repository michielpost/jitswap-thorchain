@page "/network"
@using JitSwap.Blazor.ViewModels;
@inherits MvvmComponentBase<MainViewModel>

<PageTitle>Network - @Program.PageTitlePostFix</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudText Typo="Typo.h3">Network</MudText>

    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4">
                <TotalValueLockedHistory_TotalChart />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4">
                <ChurnsList />
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>